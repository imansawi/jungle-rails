<section class="login-form">

<header class="page-header">
    <h1>Login to Jungle</h1>
  </header>

	<div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= bootstrap_form_tag url: :sessions do |f| %>
      <% if invalid?%>
          <div class="alert alert-danger">
            <strong>The following errors prevented logging-in:</strong><br>       
            <%= @error_login %>
          </div>
        <% end %>     

        <div class="form-group">
          <%= f.email_field :email%>
				</div>

				<div class="form-group">
          <%= f.password_field :password%>
				</div>

        <div class="form-group">
           <%= f.submit "Login", class: "btn btn-primary"%>
        </div>
  

      <% end %>				
			<div class="well">
				Don't have an account? <%= link_to 'Create One', :new_user %>
			</div>
	  </div>
  </div>
</section>